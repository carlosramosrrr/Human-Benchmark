<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane fx:id="root" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: darkcyan;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.backend.HearingTest">
   <children>
      <VBox layoutX="250.0" layoutY="100.0" prefHeight="200.0" prefWidth="350.0">
         <children>
            <Label fx:id="mainTitle" prefHeight="34.0" prefWidth="325.0" text="Hearing Test&#10;" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="mainDescription" text="Click the button to Start&#10;" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Button fx:id="startButton" mnemonicParsing="false" onAction="#startTimer" style="-fx-background-color: yellow;" text="Start">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="heardButton" mnemonicParsing="false" visible="false" onAction="#stopTimer" style="-fx-background-color: yellow;" text="Heard!">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="menuButton" mnemonicParsing="false" onAction="#goToMenu" style="-fx-background-color: yellow;" text="Menu">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
