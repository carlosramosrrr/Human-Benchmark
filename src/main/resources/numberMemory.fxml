<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane fx:id="root" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: darkcyan;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.backend.NumberMemory">

    <VBox fx:id="displayVBox" layoutX="150" layoutY="100">
        <Label fx:id="title" text="Number Memory" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font></Label>
        <Button fx:id="start" onAction="#startTest" style="-fx-background-color: yellow;" text="Click To Begin" />
        <TextField fx:id="inputGuess" visible="false"> </TextField>
        <Button fx:id="submit" onAction="#submitGuess" style="-fx-background-color: yellow;" text="Submit" visible="false" />
        <Button fx:id="menuButton" onAction="#goToMenu" style="-fx-background-color: yellow;" text="Main menu" />
    </VBox>
</Pane>
